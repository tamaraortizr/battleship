import pygame
from pygame.locals import *

screenwidth = 800
screenheight = 800
cellsize=30
boardwidth=400
boardheight=400
margin=5
black= (  0,   0,   0)
white  = (255, 255, 255)
green  = (  0, 204,   0)
gray  = ( 60,  60,  60)
blue  = (  0,  50, 255)
yellow = (255, 255,   0)
darkgray =( 40,  40,  40)
brick = ( 178, 34, 34)

gridshoot=[]
for rowshoot in range(10):
    gridshoot.append([])
    for column in range(10):
        gridshoot[rowshoot].append(0)
gridships=[]
for rowships in range(10):
    gridships.append([])
    for columnships in range(10):
        gridships[rowships].append(0)

done=False

pygame.init()

screen = pygame.display.set_mode((screenwidth, screenheight))
font = pygame.font.Font('freesansbold.ttf', 20)
largefont = pygame.font.Font('freesansbold.ttf', 50)
pygame.display.set_caption("Battleship")

clock = pygame.time.Clock()

while not done:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            done = True
        elif event.type == MOUSEBUTTONDOWN:
            x, y = pygame.mouse.get_pos()
            if y <= (boardheight):
                positionshoot = pygame.mouse.get_pos()
                columnshoot = positionshoot[0] // (cellsize + margin)
                rowshoot = positionshoot[1] // (cellsize + margin)
                gridshoot[rowshoot][columnshoot] = 1
                print("Click ", positionshoot, "Shooting coordinates: ", rowshoot, columnshoot)
            if y > (boardheight):
                positionships = pygame.mouse.get_pos()
                columnships = positionships[0] // (cellsize + margin)
                rowships = positionships[1] // (cellsize + margin)
                gridships[rowships][columnships] = 1
                print("   Click ", positionships, "Ship coordinates: ", rowships, columnships)
    screen.fill(black)

    for row in range(10):
        for column in range(10):
            color = white
            if gridshoot[row][column] == 1:
                color = brick
            pygame.draw.rect(screen, color,
                             [(margin + cellsize) * column + margin, (margin + cellsize) * row + margin,
                              cellsize, cellsize])

    for row in range(10):
        for column in range(10):
            color = white
            if gridships[row][column] == 1:
                color = gray
            pygame.draw.rect(screen, color, [(margin + cellsize) * column + margin,
                                             (margin + cellsize) * (row + 11) + margin, cellsize, cellsize])
    clock.tick(60)
    pygame.display.flip()

pygame.quit()
